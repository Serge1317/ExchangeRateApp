<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.exchangerate.screens.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_rootFragment"
            app:destination="@id/rootFragment" />
        <action
            android:id="@+id/action_splashFragment_to_noNetworkFragment"
            app:destination="@id/noNetworkFragment" />
    </fragment>
    <fragment
        android:id="@+id/rootFragment"
        android:name="com.example.exchangerate.screens.root.RootFragment"
        android:label="fragment_root"
        tools:layout="@layout/fragment_root" />
    <fragment
        android:id="@+id/noNetworkFragment"
        android:name="com.example.exchangerate.screens.nonetwork.NoNetworkFragment"
        android:label="fragment_no_network"
        tools:layout="@layout/fragment_no_network" >
        <action
            android:id="@+id/action_noNetworkFragment_to_splashFragment"
            app:destination="@id/splashFragment" />
    </fragment>
</navigation>